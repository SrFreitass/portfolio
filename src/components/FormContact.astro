---
import { Icon } from "astro-icon/components";
---

<form>
    <h2>Entre em contato comigo</h2>
    <p>Gostou do meu portfolio? Entre em contato</p>

    <div id="name-and-email">
        <div>
            <label>Nome</label>
            <input  id="name" type="text" placeholder="Seu nome"/>
        </div>

        <div>
            <label>E-mail</label>
            <input  id="mail" type="email" placeholder="Seu nome"/>
        </div>
    </div>

    <div>
        <label>Assunto</label>
        <input id="subject" placeholder="Qual o assunto?"></input>
    </div>

    <div>
        <label>Mensagem</label>
        <textarea id="message" placeholder="Escreva sua mensagem"></textarea>
    </div>

    <button><Icon name="carbon:send-alt" size={16}/> Enviar mensagem</button>
</form>

<script>
    const form = document.querySelector('form') as HTMLFormElement;
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const name = document.querySelector('#name') as HTMLInputElement;
        const email = document.querySelector('#mail') as HTMLInputElement;
        const subject = document.querySelector('#subject') as HTMLInputElement;
        const message = document.querySelector('#message') as HTMLInputElement;
        
        console.log(name.value, email, message);

        await fetch('https://discord.com/api/webhooks/1307922724890345583/9EvB7LYEs-h_ajjyyTMQsLsWgQeh2uC5ZSv7rhRBcCic0GskR-3NZyuQnqtHTqw_blSl', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                content: `Nome: [${name.value}]\nEmail: [${email.value}]\nAssunto:[${subject.value}]\nMensagem: [${message.value}]`
            })
        });

        alert('Mensagem enviada com sucesso!');
    });
</script>

<style>

    
    form {
        width: 100%;
        padding: 1rem 0rem;
    }

    form div {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1.2rem;
    }

    h2 {
        color: var(--white);
    }

    form input {
        width: 100%;
        padding: 0.6rem;
        border-radius: 5px;
        font-size: 1rem;
        background: none;
        border: var(--border-main);
        color: var(--white);
    }

    form textarea {
        width: 100%;
        padding: 0.6rem;
        font-size: 1rem;
        border-radius: 5px;
        background: none;
        border: var(--border-main);
        color: var(--white);
        height: 20rem;
    }

    form label {
        color: var(--white);
    }

    button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;

        margin-top: 1rem;
        padding: .7rem 1rem;
        font-weight: 600;
        background: none;
        border: var(--border-main);
        border-radius: 5px;
        cursor: pointer;
        color: var(--white);
    }


    #name-and-email {
        width: 100%;
        display: flex;
        flex-direction: row;
        gap: 1rem;
    }

    #name-and-email div {
        width: 100%;
    }

    @media (max-width: 768px) {
        #name-and-email {
            flex-direction: column;
        }
    }
</style>