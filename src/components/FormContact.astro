---
import { Icon } from "astro-icon/components";
---

<form>
    <h2>Entre em contato comigo</h2>
    <p>Gostou do meu portfolio? Entre em contato</p>

    <div id="name-and-email">
        <div>
            <label id="name">Nome</label>
            <input type="text" placeholder="Seu nome"/>
        </div>

        <div>
            <label id="name">E-mail</label>
            <input type="text" placeholder="Seu nome"/>
        </div>
    </div>

    <div>
        <label id="message">Assunto</label>
        <input placeholder="Qual o assunto?"></input>
    </div>

    <div>
        <label id="message">Mensagem</label>
        <textarea placeholder="Escreva sua mensagem"></textarea>
    </div>

    <button><Icon name="carbon:send-alt" size={16}/> Enviar mensagem</button>
</form>

<style>

    
    form {
        width: 100%;
        padding: 1rem 0rem;
    }

    form div {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1.2rem;
    }

    h2 {
        color: var(--white);
    }

    form input {
        width: 100%;
        padding: 0.5rem;
        border-radius: 5px;
        background: none;
        border: 1px solid rgba(84,84,84,0.5);
        color: var(--white);
    }

    form textarea {
        width: 100%;
        padding: 0.5rem;
        border-radius: 5px;
        background: none;
        border: 1px solid rgba(84,84,84,0.5);
        color: var(--white);
        height: 20rem;
    }

    form label {
        color: var(--white);
    }

    button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;

        margin-top: 1rem;
        padding: .7rem 1rem;
        font-weight: 600;
        background: none;
        border: 1px solid rgba(84,84,84,0.5);
        border-radius: 5px;
        cursor: pointer;
        color: var(--white);
    }


    #name-and-email {
        width: 100%;
        display: flex;
        flex-direction: row;
        gap: 1rem;
    }

    #name-and-email div {
        width: 100%;
    }
</style>