---
import Project from "./Project.astro";


---

<section>
    <h2>Projetos</h2>
    <p>Meu projetos feito entre 2023 até 2025.</p>
    <div>
        <Project 
            title="FlexCode" 
            description="Projeto Freelancer de landing page para a empresa FlexCode, utilizando NextJS" 
            imageUrl="https://i.imgur.com/ooe1PD6.png" 
            url="https://www.flexcodev.com/"
        />
        <Project 
            title="Bookmark" 
            description="Plataforma de gerenciamento de biblioteca, totalmente offline, feito em electron, utilizando NextJS e Firebase" 
            imageUrl="https://i.imgur.com/hCf8kwb.png" 
            url="https://github.com/srfreitass/bookmark.freitasdev.com.br"
        />
        <Project 
            title="LoveQR" 
            description="Um incrível gerador carta de amor para seu namorado(a), com integração no mercado pago, feito em NextJS (full-stack)" 
            imageUrl="https://i.imgur.com/EOSzur8.png" 
            url="https://loveqr.com.br"
        />
        <Project 
            title="<TechConnect/>" 
            description="Uma plataforma de artigos e vídeos curtos sobre tecnologia, computação, empreendendorismo e jogos, feito em React + Vite e Firebase" 
            imageUrl="https://i.imgur.com/M2ouhvu.png" 
            url="https://techconnect.freitasdev.com.br/"
        />
    </div>
</section>

<style>
    section {
        padding: 1rem 0rem;
    }

    h2 {
        color: var(--white);
    }

    p {
        padding-bottom: 1rem;
        color: var(--color-secondary);
        border-bottom: var(--border-main);
    }

    section div {
        margin-top: 1rem;
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 2rem;   
    }

    @media (max-width: 950px) {
        section div {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }

    @media (max-width: 650px) {
        section div {
            grid-template-columns: repeat(1, minmax(0, 1fr));
        }
    }
</style>
